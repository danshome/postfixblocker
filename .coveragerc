[run]
source = postfix_blocker
# Only omit code that cannot be exercised reliably in unit tests per AGENTS.md
omit =
    # DB2-only DDL/maintenance logic; requires a real DB2 backend and is covered in integration/e2e where feasible
    postfix_blocker/db/migrations.py
    # Environment-specific service runners (long-lived daemons) not executed under unit test harness
    postfix_blocker/services/blocker_service.py
    postfix_blocker/blocker.py

[report]
exclude_lines =
    pragma: no cover
