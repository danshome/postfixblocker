myhostname = postfix
mydestination =
inet_interfaces = all
relayhost = [mailhog]:1025
smtp_tls_security_level = none

smtpd_recipient_restrictions = check_recipient_access hash:/etc/postfix/blocked_recipients, check_recipient_access pcre:/etc/postfix/blocked_recipients.pcre, permit

maillog_file = /dev/stdout
